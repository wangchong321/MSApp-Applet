<!--pages/sign-up/select-stores/select-stores.wxml-->
<view class='base-container'>
  <view class='scroll-out-container'>
    <scroll-view class='scroll-container' scroll-y="true">
      <view class='item-container' wx:for="{{selectableStores}}" wx:key="unique">
        <view class='inline-container'>
        <view class='in-row-test'>
          <icon hidden='{{storeSelected ==item.storeId ? false:true}}' type="success" size="20" color="skyblue"/>
          <text class="{{storeSelected == item.storeId ? 'store-text-selected' : 'store-text'}}" bindtap='selectStore' data-storeI ='{{item.storeId}}' data-storeN = '{{item.storeName}}'>{{item.storeName}}</text>
        </view>
        </view>
      </view>
    </scroll-view>
  </view>
  <button class="{{storeSelected == ''? 'bt-confirm_grey':'bt-confirm_blue'}}" bindtap='confirmSelectResult'>чбошод</button>
</view>
