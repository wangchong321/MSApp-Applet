<!--pages/sign-up/select-stores/select-stores.wxml-->
<view class='base-container'>
  <view class='scroll-out-container'>
    <scroll-view class='scroll-container' scroll-y="true">
      <view class='inline-container' wx:for="{{selectableStores}}" wx:key="unique">
        <view class='in-row-text'>
          <icon 
            hidden='{{storeSelected == item.storeId ? false:true}}' 
            type="success_no_circle" 
            size="12" 
            color='#4A90E2'/>
          <text 
            class="{{storeSelected == item.storeId ? 'store-text-selected' : 'store-text'}}" 
            bindtap='selectStore' 
            data-storeI ='{{item.storeId}}' 
            data-storeN = "{{item.storeName}}">{{item.storeName}}</text>
        </view>
      </view>
    </scroll-view>
  </view>
  <button 
    class="{{storeSelected == '' ? 'bt-confirm_grey':'bt-confirm_blue'}}" 
    bindtap='confirmSelectResult'>чбошод</button>
</view>
