<view class='title-area'>
  <text class='title-header'>居间服务费总额(元)</text>
  <text class='title-sub-header'>25,000.00</text>
</view>

<view class='charge-list' wx:for="{{serviceChargeList}}" wx:key="unique">
  <view class='card-container'>
      <view class='entry'>
        <text class='text-left'>{{customerNameTitle}}</text>
        <text class='text-right'>{{item.customerName}}</text>
      </view>
      <view class='entry'>
        <text class='text-left'>{{serviceChargeAmountTitle}}</text>
        <text class='text-right'>{{item.serviceChargeAmount}}元</text>
      </view>
      <view class='entry'>
        <text class='text-left'>{{storeNameTitle}}</text>
        <text class='text-right'>{{item.storeName}}</text>
      </view>
      <view class='entry'>
        <text class='text-left'>{{payTimeTitle}}</text>
        <text class='text-right'>{{item.payTime}}</text>
      </view>
      <view class='last-entry'>
        <text class='text-left'>{{chargeStatusTitle}}</text>
        <view class='text-right'>
          <text class='text-right-margin'>{{item.chargeStatus}}</text>
          <icon wx:if="{{item.chargeStatus == '付费成功'}}" type="success" size="12" color="#4A90E2"/>
          <icon wx:elif="{{item.chargeStatus == '付费失败'}}" type="warn" size="12" color="orange"/>
          <icon wx:else type="waiting" size="12" color="green"/>
        </view>
      </view>
  </view>
</view>