page{
  min-height: 100%;
  background-color: #f6f6f6;
}
.container{
  background-color: #4A90E2;
  width: 100%;
  height: 314rpx;
  display: flex;
  flex-direction: column;
}
.container-header{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
}

.totle-title{
  color: #ffffff;
  font-size: 24rpx;
}

.totle-number{
  color: #ffffff;
  font-size: 60rpx;
  font-weight: bold;
  font-family: Helvetica, sans-serif;
  margin-top: 10rpx;
}

.containter-item{
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
}

.item{
  display: flex;
  flex-direction:column;
  align-items: center;
  width: 250rpx;
}

.haveRightLine{
  border-right: 0.5rpx solid #f6f6f6;

}
.item-title{
  color: #ffffff;
  font-size: 22rpx;
}

.item-number{
  color: #ffffff;
  font-size: 45rpx;
  font-family: Helvetica, sans-serif;
  font-weight: bold;
}

.list{
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
  height: 500rpx;
  margin-top: 15rpx;
}

.customer-item{
  margin-bottom: 15rpx;
  background-color: #ffffff;
  box-shadow: 0rpx 1rpx 10rpx  2rpx rgba(1, 1, 1, 0.1);
}

.item-left{
  color: #8B8B8B;
  font-size: 24rpx;
  margin-left: 20rpx;
  line-height: 70rpx;
}

.item-right{
  color: #4A4A4A;
  font-size: 28rpx;
  margin-right: 20rpx;
  line-height: 70rpx;
}

.item-cell{
  display: flex;
  flex-direction:row;
  justify-content: space-between;
  height:70rpx;
  border-bottom: 0.5rpx solid #f6f6f6;
}