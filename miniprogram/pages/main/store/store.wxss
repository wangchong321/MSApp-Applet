page {
  min-height: 100%;
  background-color: #f6f6f6;
}

.store-container {
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.item-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  background-color: #4A90E2;
  margin-top: 20rpx;
}

.item-left-container {
  width: 500rpx;
  display: flex;
  flex-direction: column;
}

.store-title {
  font-size: 22rpx;
  color: rgb(162, 227, 247);
  text-align: left;
  margin-bottom: 5rpx;
}

.store-name {
  font-size: 28rpx;
  color: white;
  text-align: left;
}

.item-right-container {
  width: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-left: 1rpx solid white;
  margin-left: 100rpx;
  padding: 5rpx;
  right: 200rpx;
}

.img-qrcode {
  width: 70rpx;
  height: 70rpx;
  margin: 5rpx;
}

.qrcode-tip {
  color: rgb(162, 227, 247);
  font-size: 24rpx;
  text-align: center;
}

.footer-tip {
  position: absolute;
  margin: 30rpx;
  font-size: 24rpx;
  text-align: center;
  color: grey;
  bottom: 0rpx;
}

.qrcode-screen-dark {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.qrcode-attr-box {
  height: 850rpx;
  width: 750rpx;
  overflow: hidden;
  position: fixed;
  top: 100%;
  left: 0;
  z-index: 2000;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.qrcode-detail-text-area {
  width: 750rpx;
  background-color: #4A90E2;
  box-sizing:border-box;
  color: white;
  align-items: center;
  text-align: center;
  padding: 20rpx;
  margin-top: 20rpx;
}

.qrcode-detail-text {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  display:block;
  font-size: 30rpx;
}

.qrcode-detail-area {
  width: 550rpx;
  height: 550rpx;
  border: 1rpx solid grey;
  margin: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.qrcode-detail-canvas {
  width:  250px;
  height: 250px;
}